{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ],
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "isolatedModules": false,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/types/**/*.d.ts",
    "jest.setup.js"
  ]
} 